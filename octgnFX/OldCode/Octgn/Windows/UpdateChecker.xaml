<Window x:Class="Octgn.Windows.UpdateChecker" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Loading Octgn..." MinHeight="237" MinWidth="438" Height="237" Width="438"
        WindowStartupLocation="CenterScreen" Icon="/Octgn;component/Resources/Icons/Reset.png" ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False" Topmost="False" WindowStyle="SingleBorderWindow" Closing="Window_Closing">

  <Border BorderBrush="Silver" BorderThickness="1" Name="border1">
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="73" />
                <RowDefinition Height="100*" />
            </Grid.RowDefinitions>
            <ProgressBar Height="29" Name="progressBar1" IsIndeterminate="True" Margin="6,40,6,4" />
      <Label Content="Checking for updates..." Height="28" Margin="6,6,0,0" Name="lblStatus" VerticalAlignment="Top" />
            <ListBox Grid.Row="1" HorizontalAlignment="Stretch" Name="listBox1" VerticalAlignment="Stretch" />
        </Grid>
  </Border>
</Window>