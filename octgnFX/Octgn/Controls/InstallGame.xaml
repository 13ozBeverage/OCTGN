<UserControl x:Class="Octgn.Controls.InstallGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:utils="clr-namespace:Octgn.Utils"
             xmlns:controls="clr-namespace:Octgn.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Border x:Name="BorderHostGame" Visibility="Visible" Padding="10,10,10,10" Style="{StaticResource Panel}" Margin="0,0,-217,-118">
        <Border.Background>
            <LinearGradientBrush EndPoint="0,0" StartPoint="1,0">
                <LinearGradientBrush.Transform>
                    <RotateTransform Angle="-22" CenterY="0.5" CenterX="0.5"/>
                </LinearGradientBrush.Transform>
                <GradientStop Color="#FF333333" Offset="0.558"/>
                <GradientStop Color="#FF555555" Offset="1"/>
                <GradientStop Color="#FF777777" Offset="0"/>
                <GradientStop Color="#FF555555" Offset="0.154"/>
                <GradientStop Color="#FF333333" Offset="0.351"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.ColumnSpan="2" FontSize="15" HorizontalAlignment="Center">Install A Game</Label>
            <ListView x:Name="ListViewGameList" Grid.Row="2" ItemsSource="{Binding InstallGame, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:InstallGame}}}" IsSynchronizedWithCurrentItem="True" utils:GridViewSort.AutoSort="True" Grid.RowSpan="3" SelectionMode="Single" AlternationCount="1" Thumb.DragDelta="ListViewGameList_OnDragDelta">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Game"
                                    utils:GridViewSort.PropertyName="GameName"
                                    DisplayMemberBinding="{Binding Path=GameName}"></GridViewColumn>
                        <GridViewColumn Header="Name" 
                                    utils:GridViewSort.PropertyName="Name"
                                    DisplayMemberBinding="{Binding Path=Name}"></GridViewColumn>
                        <GridViewColumn Header="User" 
                                    utils:GridViewSort.PropertyName="User.UserName"
                                    DisplayMemberBinding="{Binding Path=User.UserName}"></GridViewColumn>
                        <GridViewColumn Header="Status" 
                                    utils:GridViewSort.PropertyName="Status"
                                    DisplayMemberBinding="{Binding Path=Status}"></GridViewColumn>
                        <GridViewColumn Header="Version" 
                                    utils:GridViewSort.PropertyName="GameVersion"
                                    DisplayMemberBinding="{Binding Path=GameVersion}"></GridViewColumn>
                        <GridViewColumn Header="StartTime" 
                                    utils:GridViewSort.PropertyName="StartTime"
                                    DisplayMemberBinding="{Binding Path=StartTime}"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Border>
</UserControl>
