<UserControl x:Class="Octgn.Controls.GameSelectorGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:controls="clr-namespace:Octgn.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border>
        <Border.Resources>
            <SolidColorBrush x:Key="NormalBorderColor" Color="#AA777777" />
            <SolidColorBrush x:Key="SelectedBorderColor" Color="#AACC0000" />
        </Border.Resources>
        <Border.Style>
            <Style TargetType="{x:Type Border}">
                <Setter Property="BorderThickness" Value="5"></Setter>
                <Setter Property="BorderBrush" Value="{StaticResource NormalBorderColor}"></Setter>
                <Setter Property="CornerRadius" Value="5"></Setter>
            </Style>
        </Border.Style>
        <Image Stretch="Uniform" Source="{Binding Model.CardBack, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type controls:GameSelectorGame}}}"></Image>
    </Border>
</UserControl>
